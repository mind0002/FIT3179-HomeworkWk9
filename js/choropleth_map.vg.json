{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": null,
  "width": "container", 
  "height": "container", 
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/mind0002/FIT3179-HomeworkWk9/main/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "layer": [
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mind0002/FIT3179-HomeworkWk9/main/data/imp_exp2.csv"
            },
            "key": "Country Name",
            "fields": ["Import"]
          }
        },
        {
          "calculate": "datum.Import == null || datum.Import == 0 ? 'There is no import goods from ' + datum['properties.NAME'] : null",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {"field": "note", "type": "nominal"}
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mind0002/FIT3179-HomeworkWk9/main/data/imp_exp2.csv"
            },
            "key": "Country Name",
            "fields": ["Import"]
          }
        },
        {
          "filter": "datum.Import > 0"  
        },
        {
          "calculate": "datum.Import + 0.1", 
          "as": "Total of Import Goods ($m)"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "Total of Import Goods ($m)", 
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domainMin": 1, 
            "nice": true
          },
          "legend": {
            "orient": "top-right",  
            "offset": 40,  // Offset from the corner
            "title": "Total Import Goods ($m)"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Import", "type": "quantitative", "title": "Import Value ($m)"}
        ]
      }
    }
  ]
}